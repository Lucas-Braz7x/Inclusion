@model Inclusion.Models.Ong

<div class="cadastro-ong m-4 d-flex justify-content-center">
  <div class="row col-md-4 col-lg-6 col-xl-7">
    <div class="cadastro-doador-infos">
      <img src="~/assets/INCLUSION_logo.png" alt="Imagem da logo inclusion">
      <h1> Bem-vindo ao Inclusion!</h1>
      <h2> Preencha o formulário abaixo para ajudar quem realmente precisa!</h2>
    </div>
    <div class="col dados-pessoais">
      <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group dados">
          <label asp-for="nomeOng" class="control-label">Nome da ONG</label>
          <input asp-for="nomeOng" placeholder="Digite o nome da ONG" class="form-control" />
          <span asp-validation-for="nomeOng" class="text-danger"></span>
        </div>
        <div class="form-group dados">
          <label asp-for="email" class="control-label">Email</label>
          <input asp-for="email" type="email" placeholder="Digite o email da ONG" class="form-control" />
          <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-group dados">
          <label asp-for="telefone" class="control-label">Telefone</label>
          <input asp-for="telefone" placeholder="Digite o numero de telefone da ONG" class="form-control" />
          <span asp-validation-for="telefone" class="text-danger"></span>
        </div>
        <div class="form-group dados">
          <label asp-for="endereco" class="control-label">Endereço</label>
          <input asp-for="endereco" placeholder="Digite o endereço da ong" class="form-control" />
          <span asp-validation-for="endereco" class="text-danger"></span>
        </div>
        <div class="form-group dados">
          <label asp-for="estado" class="control-label">Estado</label>
          <input asp-for="estado" placeholder="Digite o estado da ONG" class="form-control" />
          <span asp-validation-for="estado" class="text-danger"></span>
        </div>
        <div class="form-group dados">
          <label asp-for="senha" class="control-label">Senha</label>
          <input asp-for="senha" placeholder="Digite a senha" class="form-control" />
          <span asp-validation-for="senha" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-center">
          <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </div>
      </form>
    </div>
    <div>
      <a asp-area="" asp-controller="Home" asp-action="Index">voltar</a>
    </div>
  </div>
</div>